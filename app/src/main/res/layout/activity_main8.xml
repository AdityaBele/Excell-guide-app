<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity8">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lookup Function"
                android:layout_marginStart="10dp"
                android:textSize="32sp"
                android:paddingBottom="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <!--      1      -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/left"
                    android:layout_width="90dp"
                    android:layout_height="72dp"
                    android:src="@drawable/file_excel_outline"/>

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:gravity="left"
                    android:textStyle="italic"
                    android:text="1.vLookup"/>
            </LinearLayout>
            <!--            2     -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/left2"
                    android:layout_width="90dp"
                    android:layout_height="72dp"
                    android:src="@drawable/file_excel_outline"/>

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:padding="5dp"
                    android:textStyle="italic"
                    android:text="2.hLookup"/>
            </LinearLayout>
            <!--            3     -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/left3"
                    android:layout_width="90dp"
                    android:layout_height="72dp"
                    android:src="@drawable/file_excel_outline"/>

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:padding="5dp"
                    android:textStyle="italic"
                    android:text="3.Match"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <!--         4     -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/left4"
                    android:layout_width="90dp"
                    android:layout_height="72dp"
                    android:src="@drawable/file_excel_outline"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:padding="5dp"
                    android:textStyle="italic"
                    android:text="4.Index"/>
            </LinearLayout>
            <!--        5      -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/left5"
                    android:layout_width="90dp"
                    android:layout_height="72dp"
                    android:src="@drawable/file_excel_outline"/>

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:padding="5dp"
                    android:textStyle="italic"
                    android:text="5.Offset"/>
            </LinearLayout>
            <!--        6    -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/left6"
                    android:layout_width="90dp"
                    android:layout_height="72dp"
                    android:src="@drawable/file_excel_outline"/>

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:padding="5dp"
                    android:textStyle="italic"
                    android:text="6.Indirect"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>